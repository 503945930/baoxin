@model BaoXin.Entity.Models.Account.UserRegister
@{
    Layout = "";}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
    <link type="text/css" rel="stylesheet" href="/Content/css/style.css?v=@DateTime.Now" />
    <link type="text/css" rel="stylesheet" href="/Content/css/reset.css?v=@DateTime.Now" /> 
    <script src="/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="/Infrastructure/jquery.uploadify.v2.1.4.js?v=@DateTime.Now" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="/Infrastructure/uploadify.css" /> 
    <script src="/Scripts/v.js" type="text/javascript"></script>
    <title>注册</title>
    <style>
        .txtcss {
            background-color: inherit;
            width: 226px;
            height: 30px;
            line-height: 30px;
            margin-top: 1px;
            margin-left: 30px;
            text-indent: 0.5em;
            border: none;
        }

    </style>

    <script>
        $(function () {
            InitUpload();
            $(".regform").Validform({
                tiptype: 3,
            });
            //$("#register").click(function () {
            //    document.getElementById("nbform").submit();
            //});
        });


        function InitUpload() {
            $("#uploadify").uploadify({
                height: 45,
                swf: '/Infrastructure/uploadify.swf',
                uploader: '/Unity/Upload',
                width: 210,
                onUploadSuccess: function (file, data, response) {
                    $("#img1").css("background-image", "url('" + data + "')");
                    $("#img2").css("background-image", "url('" + data + "')");
                    $("#img3").css("background-image", "url('" + data + "')");
                    $("#img4").css("background-image", "url('" + data + "')");
                    $("#ImageUrl").val(data);
                }
            });
        }

       
    </script>

</head>
<body>
    <div class="big_box">
        <div class="head">
            <ul>
                <li></li>
                <li class="logo"></li>
                <li class="sousuo"><a href="/" style="color:white;"> @WorkContext.CityName</a></li>
            </ul>
        </div>
        <div class="zhuce_beijing">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { name = "nbform", id = "nbform" ,@class="regform"}))
      
                        {

                    @Html.ValidationSummary(true)
            <div class="zhuce_bg">
                <div>
                    <ul>
                        <li style=" font-family:'微软雅黑'; height:68px; line-height:68px; color:#59bee5; font-size:30px; text-align:center;">爆信网账号登录</li>
                        <li class="user1"><input name="Nickname" id="Nickname" class="txtcss" type="text" value="您的昵称" onfocus="javascript:if(this.value=='您的昵称')this.value='';" />
                            @Html.ValidationMessageFor(model => model.Nickname)</li>

                        <div class="clear"></div>

                        <li class="user1"><input class="txtcss" type="text" id="Email"  datatype="e" errormsg="请输入正确的邮箱！" name="Email" value="您的邮箱地址" onfocus="javascript:if(this.value=='您的邮箱地址')this.value='';" />
                            @Html.ValidationMessageFor(model => model.Email)
                      
                        </li>
                        <li class="zhuce_kuang" style="display:block; float:left; margin-left:8px;">本地照片：选择一张本地图片作为头像</li>
                        <li class="zhuce_kuang1" style="display:block; float:left; margin-left:8px;">您上传的头像会自动生成4种尺寸， 请注意中小尺寸的头像是否清晰</li>
                        <div class="clear"></div>
                        <li class="mima1"><input class="txtcss" id="Password" name="Password" type="password" datatype="*6-20" nullmsg="请填写密码！" value="请输入密码" onfocus="javascript:if(this.value=='请输入密码')this.value='';" /></li>
                        <div class="clear"></div>

                              <li class="mima1"><input class="txtcss" id="ConfirmPassword" name="ConfirmPassword" datatype="*6-20" nullmsg="请填写密码！" type="password" value="请输入密码" onfocus="javascript:if(this.value=='请输入密码')this.value='';" /></li>
                        <div class="clear"></div>
                        <li class="shouji"><input class="txtcss" type="text" id="Mobile" name="Mobile"  datatype="m" errormsg="请输入正确的手机号码！" value="手机号码" onfocus="javascript:if(this.value=='手机号码')this.value='';" /></li>
                        <li style="float:left;padding-left:30px;"><a href="javascript:" style="padding-left:20px;"> <input type="file" name="uploadify" id="uploadify" /></a></li>
                        <li class="zhuce_kuang4" style="display:block; float:left; margin-left:8px;" id="img1"></li>
                        <li class="zhuce_kuang5" style="display:block; float:left; margin-left:8px;" id="img2"></li>
                        <li class="zhuce_kuang6" style="display:block; float:left; margin-left:8px;" id="img3"></li>
                        <li class="zhuce_kuang7" style="display:block; float:left; margin-left:8px;" id="img4"></li>

                        <div class="clear"></div>
                        <li class="QQ"><input class="txtcss" id="Contactqq" name="Contactqq" type="text" value="联系QQ" onfocus="javascript:if(this.value=='联系QQ')this.value='';" /></li>
                        <li class="zhuce_kuang1" style="display:block; float:left; margin-left:8px;">支持jpg、jpeg、gif、png格式，文件 小于2M</li>

                        <div class="clear"></div>
                        <li class="dizhi"><input class="txtcss" id="Contactaddr" name="Contactaddr" type="text" value="联系地址" onfocus="javascript:if(this.value=='联系地址')this.value='';" /></li>
                        <input type="hidden"  id="ImageUrl" name="ImageUrl"/>
                        <li class="moren_dl1">
                            <input type="submit" id="btnReg" class="login5" value="注册" style="border: none"/>
                            @*<a href="javascript:" id="register" name="register"><span class="login5">注册</span></a>*@
                        </li>
                    </ul>
                </div>
            </div>
           }
             @Html.Partial("_footer")
        </div>
    </div>
</body>
</html>

  