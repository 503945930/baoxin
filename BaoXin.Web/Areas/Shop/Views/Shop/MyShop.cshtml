            $('#paginator').bootstrapPaginator(options);




        });



        function RandomBg(parameters) {
            $(".pzsone").each(function () {
                var bg = ["#f9a645", "#f0593f"];
                var str = bg[Math.floor(Math.random() * bg.length)];

                $(this).css("background", str);
            });


        };

    var flag = 0;
    function selectedGood(parameters) {
        if (flag == 0) {
            window.open("/shop/shop/ModifyGoods/" + parameters);
           
        }
           
        }


    function deleteGoods(id) {
        flag = 1;

        location.href = "/shop/shop/DeleteGoods/" + id;

        $.ajax({
            url: '/shop/shop/DeleteGoods/' + id,
            type: 'post',
            success: function(data) {
                if (data == 'OK') {
                    alert("删除成功");
                    location.reload();
                } else {
                    alert("删除失败，请重新删除");
                    location.reload();
                }
            }
        });

    }


</script>

