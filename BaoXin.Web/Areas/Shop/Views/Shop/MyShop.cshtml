        function showBg() {
            var bh = $("body").height();
            var bw = $("body").width();
            $("#fullbg").css({
                height: bh,
                width: bw,
                display: "block"
            });
            $("#dialog").show();
        }


        //用户登录
        function login() {
            var loginForm = document.forms["loginForm"];
            var accountName = $("#loginName").val() ? $("#loginName").val() : "";
            var password = $("#loginPwd").val() ? $("#loginPwd").val() : "";
            //   var isRemember = 'input[name="test"]:checked')..checked;
            if (!verifyLogin(accountName, password)) {
                return;
            }
            var parms = new Object();
            parms["loginName"] = accountName;
            parms["password"] = password;
            //parms["isRemember"] = isRemember;
            ;
            $.post("/account/login", parms, function (data) {
                if (data.state == "success") {
                    window.location.href = "/index";
                }
                else if (data.state == "valicationErr") {
                    alert(data.content);
                }
                else if (data.state == "error") {
                    alert(data.content);
                }
            }, "json");
        }

        //验证登录
        function verifyLogin(accountName, password) {
            if (accountName.length == 0) {
                alert("请输入邮箱或者手机号码");
                return false;
            }
            if (password.length == 0) {
                alert("请输入密码");
                return false;
            }

            return true;
        }


        //关闭灰色 jQuery 遮罩 
        function closeBg() {
            $("#fullbg,#dialog").hide();
        }
        function GoDel() {
            if ($("#delete").text() == "删除") {
                $("#delete").text("返回");
                $("#scrolll li a").each(function () {
                    // console.log($(this));                
                    $(this).css("display", "block");
                });
            } else {
                location.reload();
            }


        }
    </script>
