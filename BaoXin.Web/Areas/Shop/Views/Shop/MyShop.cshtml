                    switch (type) {
                        case "first":
                            return "第一页";
                        case "prev":
                            return "上一页";
                        case "next":
                            return "下一页";
                        case "last":
                            return "最后一页";
                        case "page":
                            return "" + page;
                    }
                    return null;
                },
                pageUrl: function (type, page, current) {
                    ////return "/admin/log/getlog" + composeUrlParams() + "&p=" + page;
                    $.ajax({
                        url: "/shop/shop/GetGoods?page=" + current,
                        dataType: "json",
                        success: function (data) {
                            if (data.length != 0) {
                                var html = "";
                                $.each(data, function (index, content) {
                                    html += "<li class='pzsone' id=" + content['GoodsId'] + "  onclick='selectedGood(" + content['GoodsId'] + ")' style=' height: 262px;  width: 282px;margin-top: 5px;margin-left:4px;position: relative'><a href='#'><img style='width:270px;height:205px;border:0' src=" + content['PhotoURL'] + " />" +
